@model ScoreAPI.Models.User  
  
@{  
    ViewData["Title"] = "Create";  
}  
<h2>Create</h2>  
<h4>Users</h4>  
<hr />  
<div class="row">  
    <div class="col-md-4">  
        <form asp-action="Create">  
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
            <div class="form-group">  
                <label asp-for="Name" class="control-label"></label>  
                <input asp-for="Name" class="form-control" />  
                <span asp-validation-for="Name" class="text-danger"></span>  
            </div>  
            <div class="form-group">  
                <label asp-for="Answer1" class="control-label"></label>  
                <select asp-for="Answer1" class="form-control">  
                    <option value="">-- Select Amount of Savings --</option>  
                    <option value=0>0</option>  
                    <option value=2000>2000</option>
                    <option value=4000>4000</option>
                    <option value=6000>6000</option>
                    <option value=8000>8000</option>
                    <option value=10000>10000</option>  
                </select>  
                <span asp-validation-for="Answer1" class="text-danger"></span>  
            </div>  
            <div class="form-group">  
                <label asp-for="Answer2" class="control-label"></label>  
                <select asp-for="Answer2" class="form-control">  
                    <option value="">-- Select Amount of Loan --</option>  
                    <option value=0>0</option>  
                    <option value=2000>2000</option>
                    <option value=4000>4000</option>
                    <option value=6000>6000</option>
                    <option value=8000>8000</option>
                    <option value=10000>10000</option>   
                </select>  
                <span asp-validation-for="Answer2" class="text-danger"></span>  
            </div> 
            <div class="form-group">  
                <input type="submit" value="Create" class="btn btn-default" />  
            </div>  
        </form>  
    </div>  
</div>  
<div>  
    <a asp-action="Index">Back to List</a>  
</div>  
@section Scripts {  
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}  